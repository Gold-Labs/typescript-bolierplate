{
    "git": {
        "commitMessage": "chore: release ${version}",
        "tagName": "v${version}",
        "requireUpstream": false,
        "requireCleanWorkingDir": false,
        "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}"
    },
    "npm": {
        "publish": false
    },
    "github": {
        "release": false
    },
    "hooks": {
        "after:bump": "npx auto-changelog -p"
    }
}