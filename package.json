{
  "name": "create-typescript-boilerplate",
  "version": "0.0.4",
  "description": "boilerplate for typescript project",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "compile": "tsc -p .",
    "typecheck": "tsc -p . --noEmit",
    "build": "yarn clean && yarn compile",
    "start": "npm run build && node ./dist/main.js",
    "test": "jest",
    "dev": "npm run typecheck -- --watch & tsx watch ./src/main.ts",
    "clean": "rm -rf dist ./dist",
    "dev:cli": "node bin/start",
    "release": "release-it"
  },
  "bin": {
    "create-typescript-boilerplate": "bin/start"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": "please-use-yarn"
  },
  "files": [
    "boilerplate",
    "dist",
    "bin",
    "README.md"
  ],
  "devDependencies": {
    "@commitlint/config-conventional": "18.4.3",
    "@types/jest": "29.5.3",
    "@types/node": "20.4.5",
    "@typescript-eslint/eslint-plugin": "6.2.0",
    "@typescript-eslint/parser": "6.2.0",
    "commitlint": "18.4.3",
    "eslint": "8.46.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.9.0",
    "eslint-plugin-prettier": "5.0.0",
    "jest": "29.6.2",
    "lefthook": "1.5.5",
    "prettier": "3.0.0",
    "release-it": "^17.0.1",
    "rimraf": "5.0.1",
    "supertest": "6.1.6",
    "ts-jest": "29.1.1",
    "tsx": "4.7.0",
    "typescript": "5.1.6"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "gluegun": "^5.1.6"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
